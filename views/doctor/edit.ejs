<%- include('../partials/header'); -%>

<div class="container">
	<div class="row">
		<h1 style="text-align:center">edit doctor <%=doctor.dname%></h1>
		<div style="width:40% ;margin:25px auto ">
			<div class="well">
			<form action="/editDoctor/<%=doctor._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<label>Enter Doctor Name</label>
				<input class="form-control" type="text" value="<%=doctor.dname%>" name="doctor[dname]" required>
			</div>
			<div class="form-group">
				<label>Enter Doctor Age</label>
				<input class="form-control" type="number" value="<%=doctor.dage%>" name="doctor[dage]" step="1" min=0 oninput="validity.valid||(value='');" required>
			</div>
			<div class="form-group">
				<label>Enter Doctor's Department</label>
				<input class="form-control" type="text" value="<%=doctor.specialization%>" name="doctor[specialization]" required>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">submit</button>
			</div>
				
				
				
	
			</form>
			</div>
			<a class="btn btn-warning btn-lg" href="/getDoctor">Go back!</a>
		</div>


	</div>

</div>
