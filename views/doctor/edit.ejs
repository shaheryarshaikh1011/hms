<%- include('../partials/formpartial'); -%>
<div class="modal-dialog text-center form-page">
    <div class="col-sm-9 main-section">
    <h1 class="ftitle">Edit Dr.<%=doctor.dname%> details</h1>
      <div class="modal-content">
          <div class="col-12">
          <h1></h1>
        </div>

        <div class="col-12 form-input">
         <form action="/editDoctor/<%=doctor._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<label class="labels">Enter Doctor's Name</label>
				<input class="form-control" type="text" value="<%=doctor.dname%>" name="doctor[dname]"
        oninvalid="this.setCustomValidity('Please Enter Doctors Name')" onchange="this.setCustomValidity('')" pattern='[a-zA-Z][a-zA-Z ]+[a-zA-Z]$' required>
			</div>
			<div class="form-group">
				<label class="labels">Enter Doctor's Age</label>
				<input class="form-control" type="number" value="<%=doctor.dage%>" name="doctor[dage]" step="1" min="18" max="100" maxlength="3" oninput="this.value<=18" onchange="this.setCustomValidity('')" required>
			</div>
			<div class="form-group">
				<label class="labels">Enter Doctor's Department</label>
				<input class="form-control" type="text" value="<%=doctor.specialization%>" name="doctor[specialization]" pattern='[a-zA-Z][a-zA-Z ]+[a-zA-Z]$' required>
			</div>
			<button type="submit" class="btn btn-success">submit</button>
            <div class="goback">
            <a class="btn btn-warning btn-lg" href="/getDoctor">Go back!</a>
            </div>
          </form>


        </div>

   

      </div>
    </div>
</div>



<%- include('../partials/footer'); -%>