<%- include('../partials/formpartial'); -%>





<div class="modal-dialog text-center form-page">
    <div class="col-sm-9 main-section">
    <h1>edit Appointment</h1>
      <div class="modal-content">
          <div class="col-12">
          <h1></h1>
        </div>

        <div class="col-12 form-input">
         		<form action="/editAppointment/<%=appointment._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<label class="labels">Enter Patient's Fullname</label>
				<input class="form-control" type="text" value="<%=appointment.pname%>"" name="appointment[pname]" size="20" pattern='[a-zA-Z][a-zA-Z ]+[a-zA-Z]$' required>
			</div>
			<div class="form-group">
				<label class="labels">Enter Reason</label>
				<input class="form-control" type="text" value="<%=appointment.areason%>" name="appointment[areason]" size="100" pattern='[a-zA-Z][a-zA-Z ]+[a-zA-Z]$' required>
			</div>
			<div class="form-group">
				<label class="labels">Select Date and Time</label>
				<input class="form-control text-center" value="<%=appointment.ddate%>" type="datetime-local" name="appointment[ddate]" required>
			</div>

			<div class="form-group">
				<label for="name" class="labels">select Doctor</label>
				<select class="form-control" name="appointment[dname]" id="name">
					<%doctor.forEach(function(doctor){%>
  						<option value="<%=doctor.dname%>"><%=doctor.dname%></option>
  					<%});%>
				</select>
			</div>
			
 
			
			
			
			<button type="submit" class="btn btn-success">submit</button>
            <div class="goback">
            <a class="btn btn-warning btn-lg" href="/getAppointment">Go back!</a>
            </div>
				
				
				
	
			</form>

        </div>

   

      </div>
    </div>
</div>





<%- include('../partials/footer'); -%>