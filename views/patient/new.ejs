<%- include('../partials/formpartial'); -%>


<div class="modal-dialog text-center form-page">
    <div class="col-sm-9 main-section">
    <h1 class="ftitle">Add New Patient</h1>
      <div class="modal-content">
          <div class="col-12">
          	<h1></h1>
          </div>
          <div class="col-12 form-input">
          	<form action="addPatient" method="POST" name="add">

				<div class="form-group">
					<input class="form-control" type="text" placeholder="enter name" name="pname" oninvalid="this.setCustomValidity('Please Enter Patients Name')" onchange="this.setCustomValidity('')" pattern='[a-zA-Z][a-zA-Z ]+[a-zA-Z]$' required>
				</div>

				<div class="form-group">
					<input class="form-control" type="number" placeholder="enter Age" name="page" step="1" min=1  max="100" oninput="this.value<=0" required>
				</div>

				<div class="form-group">
				
					<select class="form-control" name="pgender" id="pgender">
					
  						<option value="M">Male</option>
  						<option value="F">Female</option>
  					
					</select>
				</div>

				<div class="form-group">
				
					<input class="form-control" type="email" placeholder="enter Email" name="email" oninvalid="this.setCustomValidity('Please Enter Patients Email id')" onchange="this.setCustomValidity('')" required>
				</div>
			
				<div class="form-group">
					<input class="form-control" type="text" placeholder="enter Address" name="paddr"
					oninvalid="this.setCustomValidity('Please Enter Patients Address')" onchange="this.setCustomValidity('')" required>
				</div>

            	<button type="submit" class="btn btn-success">submit</button>

            	<div class="goback">
            		<a class="btn btn-warning btn-lg" href="/getPatient">Go back!</a>
          		</div>
          	</form>


         </div>

   

      </div>
    </div>
</div>





<%- include('../partials/footer'); -%>