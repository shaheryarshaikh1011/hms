<%- include('../partials/formpartial'); -%>





<div class="modal-dialog text-center form-page">
    <div class="col-sm-9 main-section">
    <h1 class="ftitle">Edit Patient</h1>
      <div class="modal-content">
          <div class="col-12">
          <h1></h1>
        </div>

        <div class="col-12 form-input">
  
		
				<form action="/editPatient/<%=patient._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<label class="labels" >Enter Patient's Fullname</label>
				<input class="form-control" type="text" value="<%=patient.pname%>" name="patient[pname]" pattern='[a-zA-Z][a-zA-Z ]+[a-zA-Z]$' required>
			</div>
			<div class="form-group">
				<label class="labels" >Enter Age</label>
				<input class="form-control" type="number" value="<%=patient.page%>" name="patient[page]"  step="1" min=1  max="100" oninput="this.value<=0" required>
			</div>
			<div class="form-group">
			<label class="labels">Select Gender</label>
				<select class="form-control" name="patient[pgender]" id="pgender">
					
  						<option value="M">Male</option>
  						<option value="F">Female</option>
  					
				</select>
			</div>
			<div class="form-group">
				<label class="labels">Enter Email Address</label>
				<input class="form-control" type="email" value="<%=patient.pemail%>" name="patient[pemail]" required>
			</div>
			<div class="form-group">
			<label class="labels">Enter Residential Address</label>
				<input class="form-control" type="text" value="<%=patient.paddr%>" name="patient[paddr]" required>
			</div>
			
			
			
			
			<button type="submit" class="btn btn-success">submit</button>
            <div class="goback">
            <a class="btn btn-warning btn-lg" href="/getPatient">Go back!</a>
            </div>
				
				
				
	
			</form>

        </div>

   

      </div>
    </div>
</div>





<%- include('../partials/footer'); -%>